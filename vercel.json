{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "redirects": [
    {
      "source": "/:path*",
      "destination": "https://www.dekato.ng/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/image/:path*",
      "destination": "https://cdn.dekato.ng/image/:path*"
    },
    {
      "source": "/blog/:path*",
      "destination": "https://cdn.dekato.ng/blog/:path*"
    },
    {
      "source": "/blog-images/:path*",
      "destination": "https://cdn.dekato.ng/blog-images/:path*"
    },
    {
      "source": "/variant/:path*",
      "destination": "https://cdn.dekato.ng/variant/:path*"
    }
  ]
}
